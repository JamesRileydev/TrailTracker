{
  "TrailTrackerDatabaseSettings": {
    "TrailsCollectionName": "Trails",
    "ConnectionString": "mongodb://<user name>:<user password>@<ip address>:27017/TrailTrackerDb",
    "DatabaseName": "TrailTrackerDb"
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=<ip address>;port=3306;database=<database name>;user=<user name>;password=<user password>"
  },
  "Serilog": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Debug"
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "G:\\logs\\log-{Date}.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}